{
  "extends": [
    "config:base"
  ],
  "minimumReleaseAge": "2 days",
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackageNames": [
        "cypress/included",
        "cypress"
      ],
      "groupName": "cypress"
    },
    {
      "matchPackageNames": [
        "@types/babel-jest",
        "@types/jest",
        "@types/ts-jest",
        "babel-jest",
        "jest",
        "jest-environment-jsdom",
        "ts-jest"
      ],
      "matchPackagePatterns": [
        "^@jest/"
      ],
      "groupName": "jest"
    },
    {
      "matchPackageNames": [
        "@types/node",
        "node"
      ],
      "groupName": "node",
      "allowedVersions": "/^[0-9]*[02468][.\\-]/"
    },
    {
      "matchPackageNames": [
        "node-plop",
        "plop"
      ],
      "groupName": "plop"
    },
    {
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom",
        "react",
        "react-dom"
      ],
      "groupName": "react"
    },
    {
      "matchPackageNames": [
        "@types/react-router",
        "@types/react-router-dom",
        "react-router",
        "react-router-dom",
        "history"
      ],
      "groupName": "react-router"
    },
    {
      "matchPackageNames": [
	"mdx-js",
        "storybook"
      ],
      "matchPackagePatterns": [
        "^@mdx-js/",
        "^@storybook/"
      ],
      "groupName": "storybook"
    },
    {
      "matchPackageNames": [
        "@testing-library/jest-dom",
        "@testing-library/react",
        "@testing-library/user-event"
      ],
      "matchPackagePatterns": [
        "^@testing-library/"
      ],
      "groupName": "testing-library"
    },
    {
      "matchPackagePatterns": [
        "^@types/webpack",
        "^webpack"
      ],
      "groupName": "webpack"
    }
  ],
  "schedule": ["before 3am on Monday"]
}
