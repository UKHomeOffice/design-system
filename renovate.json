{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "cypress/included",
        "cypress"
      ],
      "groupName": "cypress"
    },
    {
      "matchPackageNames": [
        "@types/babel-jest",
        "@types/jest",
        "@types/ts-jest",
        "babel-jest",
        "jest",
        "jest-environment-jsdom",
        "ts-jest"
      ],
      "groupName": "jest"
    },
    {
      "matchPackageNames": [
        "@types/node",
        "node"
      ],
      "groupName": "node"
    },
    {
      "matchPackageNames": [
        "node-plop",
        "plop"
      ],
      "groupName": "plop"
    },
    {
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom",
        "react",
        "react-dom"
      ],
      "groupName": "react"
    },
    {
      "matchPackageNames": [
        "@types/react-router",
        "@types/react-router-dom",
        "react-router",
        "react-router-dom",
        "history"
      ],
      "groupName": "react-router"
    },
    {
      "matchPackageNames": [
	"mdx-js",
        "storybook"
      ],
      "matchPackagePatterns": [
        "^@mdx-js/",
        "^@storybook/"
      ],
      "groupName": "storybook"
    },
    {
      "matchPackagePatterns": [
        "^@types/webpack",
        "^webpack"
      ],
      "groupName": "webpack"
    }
  ]
}
